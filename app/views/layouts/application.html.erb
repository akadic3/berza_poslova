<!DOCTYPE html>
<html>
<head>
  <title>BerzaPoslova</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= yield %>
<div id="user_nav" style="align-content: center">
  <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log out", log_out_path %>
      <% if current_user.email=="admin@poso.ba"%> |
          <%= link_to "Employers", employers_path %> |
          <%= link_to "Users", users_path %>
      <%end%>
      <% i=1 %>
      <% @users=User.all%>
      <% while i<=@users.count() %>
          <%if current_user.email==@users.find(i).email %>
              <%= link_to "Profile", users_path %> |
              <%= link_to "Users", users_path %>
              <%end%>
          <% i=i+1 %>
          <%end%>
      <% i=2 %>
      <% @employers=Employer.all%>
      <% while i<=@employers.count() %>
          <%if current_user.email==@employers.find(i).email %>
              <%= link_to "Advartisment", advartisment_path %> |
              <%= link_to "Profile", users_path %>
          <%end%>
          <% i=i+1 %>
      <%end%>

  <% else %>
      <%= link_to "Sign up", sign_up_path %> or
      <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
</body>
</html>
